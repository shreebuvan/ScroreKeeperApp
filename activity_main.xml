<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0091EA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TEAM A"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="WICKETS GONE"
                android:textColor="#DD2C00" />
            <TextView
                android:id="@+id/team_awic_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="0"
                android:textColor="#000000" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:onClick="teamAsix"
                android:background="#FF5722"
                android:text="It's a sixer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="teamAfour"
                android:background="#FF5722"
                android:text="It's a four" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAtwo"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="#FF5722"
                android:text="2 runs" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAone"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="#FF5722"
                android:text="1 run" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamAwicket"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#FF5722"
                android:text="Wicket" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TEAM B"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="WICKETS GONE"
                android:textColor="#DD2C00" />
            <TextView
                android:id="@+id/team_bwic_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="0"
                android:textColor="#000000" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBsix"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="#FFD600"
                android:text="It's a sixer" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBfour"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="#FFD600"
                android:text="It's a four" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBtwo"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="#FFD600"
                android:text="2 runs" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBone"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:background="#FFD600"
                android:text="1 run" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="teamBwicket"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="#FFD600"
                android:text="Wicket" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:onClick="reset"
        android:textColor="#FF5722"
        android:text="RESET" />

</RelativeLayout>